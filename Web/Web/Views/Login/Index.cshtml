@model Web.Models.UserAuth

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Login</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="@Url.Content("~/Content/assets/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/boxicons/css/boxicons.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/quill/quill.snow.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/quill/quill.bubble.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/remixicon/remixicon.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/simple-datatables/style.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/css/style.css")" rel="stylesheet">

</head>

<body>


    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="Login" class="logo d-flex align-items-center w-auto">
                            <img src="@Url.Content("~/Content/assets/img/lexmark_logo.png")">
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Ingreso Web</h5>
                            </div>

                            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "row g-3 needs-validation", @novalidate = "novalidate" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="col-12">
                                    <label for="yourUsername" class="form-label">Usuario</label>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    <div class="invalid-feedback">Por favor, digite su usuario.</div>
                                </div>

                                <div class="col-12">
                                    <label for="yourPassword" class="form-label">Contraseña</label>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required", type = "password" } })
                                    <div class="invalid-feedback">Por favor, digite su contraseña.</div>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Ingresar</button>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </section>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="@Url.Content("~/Content/assets/vendor/apexcharts/apexcharts.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/chart.js/chart.umd.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/echarts/echarts.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/quill/quill.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/simple-datatables/simple-datatables.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/tinymce/tinymce.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/php-email-form/validate.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/main.js")"></script>

</body>

</html>