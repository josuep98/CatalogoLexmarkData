@{
    Business.Models.Response.UserAuthResponse userAuthResponse = Session["loginSession"] as Business.Models.Response.UserAuthResponse;
    if (userAuthResponse == null)
    {
        userAuthResponse = new Business.Models.Response.UserAuthResponse();
        userAuthResponse.UserName = string.Empty;
        userAuthResponse.Name = string.Empty;
        Response.Redirect("/Login");
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewBag.Title - Catálogo Lexmark</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link rel="icon" href="assets/img/favicon.png">
    <link rel="apple-touch-icon" href="assets/img/apple-touch-icon.png">

    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <link href="@Url.Content("~/Content/assets/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/boxicons/css/boxicons.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/quill/quill.snow.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/quill/quill.bubble.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/remixicon/remixicon.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/vendor/simple-datatables/style.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/assets/css/style.css")" rel="stylesheet">

</head>
<body>
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">
                    <img src="@Url.Content("~/Content/assets/img/lexmark_logo.png")">
                </span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item dropdown pe-3">
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="@Url.Content("~/Content/assets/img/user-login-2.png")" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@userAuthResponse.UserName</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li>
                            <a class="dropdown-item d-flex align-items-lg-start">
                                <h6>@userAuthResponse.Name</h6>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Index", "Login")">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Cerrar Sesión</span>
                            </a>
                        </li>
                    </ul>
                </li>

            </ul>
        </nav>
    </header>

    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index", "Category")">
                    <i class="bi bi-grid"></i>
                    <span>Categoría</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index", "Product")">
                    <i class="bi bi-menu-button-wide"></i>
                    <span>Producto</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index", "Rol")">
                    <i class="bi bi-gem"></i>
                    <span>Rol</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index", "User")">
                    <i class="bi bi-person"></i>
                    <span>Usuario</span>
                </a>
            </li>
        </ul>
    </aside>

    <!-- Aquí va el contenido -->
    <main id="main" class="main">
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
        </section>
    </main>
    <!-- Fin contenido -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <script src="@Url.Content("~/Content/assets/vendor/apexcharts/apexcharts.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/chart.js/chart.umd.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/echarts/echarts.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/quill/quill.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/simple-datatables/simple-datatables.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/tinymce/tinymce.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/php-email-form/validate.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/main.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/validations.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>